# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
NODE_ENV=development
APP_NAME=ProyectoFullstack
APP_VERSION=1.0.0

# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=3000
HOST=0.0.0.0
API_PREFIX=/api/v1

# ==============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==============================================
DB_HOST=postgres
DB_PORT=5432
DB_USER=admin
DB_PASSWORD=admin123
DB_NAME=proyecto_db
DB_LOGGING=false
DB_MAX_CONNECTIONS=100
DB_SSL=false

# ==============================================
# JWT AUTHENTICATION
# ==============================================
JWT_SECRET=tu_super_secreto_cambiar_en_produccion_123456789
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=tu_refresh_secret_cambiar_en_produccion_987654321
JWT_REFRESH_EXPIRATION=7d

# ==============================================
# SECURITY & CORS
# ==============================================
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# BCRYPT CONFIGURATION
# ==============================================
BCRYPT_ROUNDS=10

# ==============================================
# PAGINATION
# ==============================================
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# ==============================================
# SEEDS (solo desarrollo, valores por defecto)
# ==============================================
SEED_ADMIN_EMAIL=admin@example.com
SEED_ADMIN_PASSWORD=admin123

# ==============================================
# FRONTEND CONFIGURATION (VITE)
# ==============================================
VITE_API_URL=http://localhost:3000/api/v1
VITE_APP_NAME=ProyectoFullstack
VITE_ENABLE_DEVTOOLS=true


